<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LearnLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <!--  Customize your light theme here. -->
<!--          Thiết lập các màu cho button-->
        <item name="colorPrimary">@color/buttonNormal</item>
<!--        <item name="colorPrimaryDark">@color/xanhden</item>-->
<!--        <item name="buttonStyle">@style/buttonStyle</item>-->
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_selector</item>
    </style>

    <style name="gd">
        <item name="android:background">@color/pink</item>
    </style>



    <style name="buttonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:state_pressed">true</item>
        <item name="android:background">@drawable/background_buttonpress</item>
        <item name="android:textSize">@dimen/size32</item>
        <item name="android:padding">@dimen/size28</item>
        <item name="android:layout_marginRight">@dimen/size5</item>
        <item name="android:layout_marginTop">@dimen/size5</item>
        <item name="android:layout_marginBottom">@dimen/size5</item>
    </style>

    <style name="Theme.LearnLayout" parent="Base.Theme.LearnLayout" />
