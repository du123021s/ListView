<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:background="@color/black"
    android:paddingBottom="0dp"
    android:stretchColumns="*">
    <!--  Col 1-->
    <TableRow>
        <EditText
            android:id="@+id/edit"
            android:layout_span="4"
            android:text="0"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/size75"
            android:textSize="@dimen/size37"
            android:textColor="@color/white"/>

    </TableRow>

    <!--  Col 2-->
    <TableRow>

        <Button
            android:id="@+id/nullBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:layout_span="3"
            android:background="@color/grey_while"
            android:padding="@dimen/size10"
            android:text="@null"
            android:textSize="@dimen/size24" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_span="1"
            android:background="@color/grey_while"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/delete"
            android:textSize="@dimen/size28" />
    </TableRow>

    <!--  Col 3 -->
    <TableRow>

        <Button
            android:id="@+id/sevenBtn"
            style="@style/buttonStyle"
            android:text="7"
            android:background="@drawable/custom_button_selector"/>

        <Button
            android:id="@+id/eighBtn"
            style="@style/buttonStyle"
            android:text="8"
            android:background="@drawable/custom_button_selector"/>

        <Button
            android:id="@+id/nineBtn"
            style="@style/buttonStyle"
            android:text="9"
            android:background="@drawable/change_background"/>

        <Button
            android:id="@+id/divisionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/size28"
            android:text="/"
            android:textSize="@dimen/size32" />
    </TableRow>

    <!--  Col 4-->
    <TableRow>

        <Button
            android:id="@+id/fourBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@drawable/change_background"
            android:padding="@dimen/size28"
            android:text="4"
            android:textSize="@dimen/size32" />

        <Button
            android:id="@+id/fineBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@drawable/change_background"
            android:padding="@dimen/size28"
            android:text="5"
            android:textSize="@dimen/size32" />

        <Button
            android:id="@+id/sixBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@drawable/change_background"
            android:padding="@dimen/size28"
            android:text="6"
            android:textSize="@dimen/size32" />

        <Button
            android:id="@+id/mulBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@color/grey_while"
            android:gravity="center"
            android:padding="@dimen/size28"
            android:text="X"
            android:textSize="@dimen/size32" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/oneBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@drawable/change_background"
            android:padding="@dimen/size28"
            android:text="1"
            android:textSize="@dimen/size32" />

        <Button
            android:id="@+id/twoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@drawable/change_background"
            android:padding="@dimen/size28"
            android:text="2"
            android:textSize="@dimen/size32" />

        <Button
            android:id="@+id/threeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@drawable/change_background"
            android:padding="@dimen/size28"
            android:text="3"
            android:textSize="@dimen/size32" />

        <Button
            android:id="@+id/minusBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@color/grey_while"
            android:gravity="center"
            android:padding="@dimen/size28"
            android:text="-"
            android:textSize="@dimen/size32" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/pointBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@drawable/change_background"
            android:padding="@dimen/size28"
            android:text="."
            android:textSize="@dimen/size32" />

        <Button
            android:id="@+id/zeroBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@drawable/change_background"
            android:padding="@dimen/size28"
            android:text="0"
            android:textSize="@dimen/size32" />

        <Button
            android:id="@+id/equalBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@drawable/change_background"
            android:padding="@dimen/size28"
            android:text="="
            android:textSize="@dimen/size32" />

        <Button
            android:id="@+id/plusBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/size5"
            android:background="@color/grey_while"
            android:gravity="center"
            android:padding="@dimen/size28"
            android:text="+"
            android:textSize="@dimen/size32" />

    </TableRow>

    <TableRow>

    </TableRow>


</TableLayout>